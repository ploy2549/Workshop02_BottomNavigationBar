<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.workshop02_bottomnavigationbar.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_categories"
        android:name="com.example.workshop02_bottomnavigationbar.ui.dashboard.DashboardFragment"
        android:label="@string/title_categories"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.example.workshop02_bottomnavigationbar.ui.notifications.NotificationsFragment"
        android:label="@string/title_cart"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_user_profile"
        android:name="com.example.workshop02_bottomnavigationbar.ui.userprofile.UserProfileFragment"
        android:label="@string/title_user_profile"
        tools:layout="@layout/fragment_userprofile" />
</navigation>